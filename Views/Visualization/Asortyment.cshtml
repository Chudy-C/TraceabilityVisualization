@model TraceabilityVisualization_v2.Models.Visualization.VisualizationLists
@using System.Data
@using System.Linq

@{
    ViewData["Title"] = "System wózków";
}
<head>
    <title>System wózków</title>
    <meta http-equiv="refresh" content="60" />
</head>
<style>
    h3 {
        padding: 5px;
        padding-top: 1%;
        text-align: center;
    }
    h4{
        padding: 5px;
        text-align:center;
    }

    #header{
        position:relative;
    }
    .imgSafilin {
        position: absolute;
        top: 10px;
        right: 20px;
    }
    .col-md-12 {
        float: left;
        width:45%;
        padding-left: 3%;
        padding-right: 2%;
    }
@*    .col-md-5 {
        float: left;
        width: 20%;
        padding: 3%;
        padding-top:15%;
    }*@
    table {
        border-collapse: collapse;
        border-spacing: 0;
        table-layout : fixed;
        width: 100%;
        border: 1px solid #ddd;
    }

    th, tr, td {
        text-size-adjust:auto;
        text-align: center;
    }

    .suma {
        background-color: #45b6fe;
    }
    .suma-all {
        background-color: #2f95d6;
    }
    .long-text {
        font-size: 115%;
    }
    .short-text {
        font-size:115%;
        font-weight: normal;
        text-align: right;
        padding-right: 20%;
    }

</style>

<div class="container-fluid body-content">
    <div class="header">
        <div class="title">
            <h3>System wózków</h3>
        </div>
        <div class="safilinImage">
            <img src="https://www.safilin.fr/wp-content/uploads/safilin-logo2.png" alt="Safilin Logo" width="100" height="100" class="imgSafilin" />
        </div>
    </div>
    <div class="col-md-12">
        <div>
            <div class="table-responsive">
                <h4> W procesie </h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Asortyment
                            </th>
                            <th>
                                Przędzalnia
                            </th>
                            <th>
                                Suszarnia
                            </th>
                            <th>
                                Komora
                            </th>
                            <th>
                                Przewijalnia
                            </th>
                            <th class="suma">
                                SUMA
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listWithPW)
                        {
                            if (item.asortyment != "SUMA")
                            {
                                <tr>
                                    <td>
                                        @item.asortyment
                                    </td>
                                    <td>
                                        @item.przedzalnia
                                    </td>
                                    <td>
                                        @item.suszarnia
                                    </td>
                                    <td>
                                        @item.komora
                                    </td>
                                    <td>
                                        @item.przewijalnia
                                    </td>
                                    <td class="suma">
                                        <b>@item.suma</b>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr class="suma">
                                    <td>
                                        <b>@item.asortyment</b>
                                    </td>
                                    <td>
                                        <b> @item.przedzalnia </b>
                                    </td>
                                    <td>
                                        <b>@item.suszarnia</b>
                                    </td>
                                    <td>
                                        <b>@item.komora</b>
                                    </td>
                                    <td>
                                        <b>@item.przewijalnia</b>
                                    </td>
                                    <td class="suma-all">
                                        <b>@item.suma</b>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
            <div class="table-responsive">
                <table>
                    <tr>
                        <th class="long-text">
                            Puste wózki :
                        </th>
                        <th class="short-text">
                            @Model.emptyCartCounter
                        </th>
                    </tr>

                </table>
            </div>
        </div>

    </div>
    <div class="col-md-12" padding-left="2%">
        <div class="row">
            <div class="table-responsive">
                <h4> Poza procesem </h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Asortyment
                            </th>
                            <th>
                                Przędzalnia
                            </th>
                            <th>
                                Suszarnia
                            </th>
                            <th>
                                Komora
                            </th>
                            <th class="suma">
                                Suma
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listWithoutPW)
                        {
                            if (item.asortyment != "SUMA")
                            {
                                <tr>
                                    <td>
                                        @item.asortyment
                                    </td>
                                    <td>
                                        @item.przedzalnia
                                    </td>
                                    <td>
                                        @item.suszarnia
                                    </td>
                                    <td>
                                        @item.komora
                                    </td>
                                    <td class="suma">
                                        <b>@item.suma</b>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr class="suma">
                                    <td>
                                        <b>@item.asortyment</b>
                                    </td>
                                    <td>
                                        <b>@item.przedzalnia</b>
                                    </td>
                                    <td>
                                        <b>@item.suszarnia</b>
                                    </td>
                                    <td>
                                        <b>@item.komora</b>
                                    </td>
                                    <td class="suma-all">
                                        <b>@item.suma</b>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
            <div>

            </div>
        </div>

    </div>
</div>