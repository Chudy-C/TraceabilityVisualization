@model System.Data.DataTable
@using System.Data
@{
    ViewData["Title"] = "Wózki w komorze";
}

<h1>Komora Sezonowania</h1>

<div class="container">


    @for(int i = 0; i < Model.Rows.Count; i++)
    {
        if(i%5 == 0) {
        @:<div class="row">
        }
              <div class="col-4">
                  <div class="card" style="max-width: 18rem;">
                      <div class="card-body">
                          <h5 class="card-title">@Model.Rows[i]["Nr_wozka"]</h5>
                          <h6 class="card-subtitle" mb-2 text-muted>Nm : @Model.Rows[i]["Nm"]</h6>
                          <p class="card-text">Wejście na komorę : @Model.Rows[i]["TS_KOM1"]</p>
                      </div>
                  </div>
              </div>

        if(i%5 == 0){
        @:</div>
        }
    }

</div>